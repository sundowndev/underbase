{
  "private": true,
  "scripts": {
    "start": "npm run lint && npm run build:clean && npm run test",
    "lint": "tslint --project tsconfig.json 'packages/**/*.ts' --exclude '**/*.d.ts' --exclude 'node_modules/**/*.ts'",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "node ./scripts/buildTs.js",
    "build:clean": "rm -rf ./packages/*/build ./packages/*/coverage && npm run build",
    "build:watch": "npm run build -- --watch",
    "clean": "lerna run clean",
    "clean-all": "rm -rf ./node_modules ./packages/*/node_modules ./packages/*/coverage ./packages/*/build",
    "publish": "npm run build:clean && lerna publish",
    "test": "cross-env NODE_ENV=test jest --config jest.config.js --coverage --useStderr --forceExit --detectOpenHandles",
    "test:debug": "cross-env NODE_ENV=test node --inspect=0.0.0.0:5857 jest --coverage --useStderr --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll --useStderr --coverage",
    "test:debug:watch": "cross-env NODE_ENV=test node --inspect=0.0.0.0:5857 jest --coverage --useStderr",
    "docs:serve": "./node_modules/docsify-cli/bin/docsify serve ./docs",
    "docs:ts": "typedoc --out ts-docs ./packages/**/* --theme default --readme none --exclude './packages/underbase-cli/**/*'",
    "docker:start": "docker-compose up underbase-dev",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose run underbase-test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "7.6.0",
    "@babel/preset-typescript": "7.6.0",
    "@babel/register": "7.6.0",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@types/jest": "24.0.16",
    "chalk": "2.4.2",
    "cross-env": "5.2.0",
    "docsify-cli": "4.3.0",
    "husky": "3.0.2",
    "jest": "24.8.0",
    "jest-extended": "0.11.2",
    "lerna": "3.16.4",
    "micromatch": "4.0.2",
    "string-length": "3.1.0",
    "ts-jest": "24.0.2",
    "ts-loader": "5.4.5",
    "tslint": "5.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-microsoft-contrib": "6.1.0",
    "typedoc": "0.15.0",
    "typescript": "3.5.3",
    "vrsource-tslint-rules": "6.0.0"
  }
}
