{
  "name": "underbase",
  "version": "1.0.4",
  "description": "MongoDB schema and data migration library",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "scripts": {
    "lint": "tslint --project .",
    "build": "tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "docker:start": "npm run build && docker-compose up underbase-dev || true",
    "docker:test": "npm run build && docker-compose up underbase-test || true",
    "docker:down": "docker-compose down",
    "prestart": "npm run build:watch & sleep 12s",
    "start": "npm run test",
    "test": "jest dist/* --coverage --useStderr --forceExit",
    "test:debug": "node --inspect=0.0.0.0:5857 node_modules/.bin/jest dist/* --coverage --useStderr --forceExit",
    "test:watch": "jest dist/* --watchAll --useStderr --coverage",
    "test:debug:watch": "node --inspect=0.0.0.0:5857 node_modules/.bin/jest dist/* --coverage --useStderr"
  },
  "author": "RaphaÃ«l Cerveaux <raphael@crvx.fr> (https://twitter.com/sundowndev)",
  "repository": {
    "type": "git",
    "url": "https://github.com/sundowndev/underbase"
  },
  "bugs": {
    "url": "https://github.com/sundowndev/underbase/issues"
  },
  "keywords": [
    "mongo",
    "mongodb",
    "migration",
    "node"
  ],
  "license": "ISC",
  "engines": {
    "node": ">=7.10.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/lodash": "4.14.123",
    "@types/mongodb": "3.1.22",
    "@types/node": "10.14.4",
    "jest": "24.6.0",
    "tslint": "5.15.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-microsoft-contrib": "6.1.0",
    "typescript": "3.4.1",
    "vrsource-tslint-rules": "6.0.0"
  },
  "dependencies": {
    "@types/bluebird": "3.5.26",
    "bluebird": "3.5.3",
    "lodash": "4.17.11",
    "mongodb": "3.2.2",
    "type-check": "0.3.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "dist/test/*.+(spec|int|unit)\\.js$",
    "verbose": true
  }
}
