{
  "name": "underbase",
  "version": "1.0.4",
  "description": "MongoDB schema and data migration library",
  "main": "build/index.js",
  "bin": "build/cli.js",
  "scripts": {
    "lint": "tslint --project .",
    "build": "webpack --mode production --config ./webpack.config.js --progress --color --display-error-details",
    "build:watch": "rm -rf build && webpack --mode production --config ./webpack.config.js --watch",
    "docker:start": "docker-compose up underbase-dev",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose run underbase-test",
    "start": "npm run build && npm run lint && npm run test",
    "test": "cross-env NODE_ENV=test jest ./test --config jest.config.js --coverage --useStderr --forceExit --detectOpenHandles",
    "test:debug": "cross-env NODE_ENV=test node --inspect=0.0.0.0:5857 jest ./test  --coverage --useStderr --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest ./test --watchAll --useStderr --coverage",
    "test:debug:watch": "cross-env NODE_ENV=test node --inspect=0.0.0.0:5857 jest ./test --coverage --useStderr",
    "docs:serve": "./node_modules/docsify-cli/bin/docsify serve ./docs",
    "docs:ts": "typedoc --out ts-docs ./lib --theme default --readme none --exclude './lib/cli/**/*.ts'"
  },
  "author": "RaphaÃ«l Cerveaux <raphael@crvx.fr> (https://twitter.com/sundowndev)",
  "repository": {
    "type": "git",
    "url": "https://github.com/sundowndev/underbase"
  },
  "bugs": {
    "url": "https://github.com/sundowndev/underbase/issues"
  },
  "keywords": [
    "mongo",
    "mongodb",
    "migration",
    "schema"
  ],
  "license": "ISC",
  "engines": {
    "node": ">=7.10.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@types/bluebird": "3.5.27",
    "@types/fs-extra": "8.0.0",
    "@types/jest": "24.0.15",
    "@types/lodash": "4.14.135",
    "@types/mongodb": "3.1.22",
    "@types/node": "10.14.10",
    "@types/sinon": "7.0.13",
    "@types/type-check": "0.3.27",
    "cross-env": "5.2.0",
    "docsify-cli": "4.3.0",
    "esm": "3.2.25",
    "husky": "3.0.0",
    "jest": "24.5.0",
    "jest-extended": "0.11.1",
    "sinon": "7.3.2",
    "ts-jest": "24.0.2",
    "ts-loader": "5.4.5",
    "tslint": "5.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-microsoft-contrib": "6.1.0",
    "typedoc": "0.14.2",
    "typescript": "3.3.1",
    "vrsource-tslint-rules": "6.0.0",
    "webpack": "4.35.2",
    "webpack-cli": "3.3.5",
    "webpack-node-externals": "1.7.2",
    "yargs": "13.2.4"
  },
  "dependencies": {
    "bluebird": "3.5.5",
    "lodash": "4.17.11",
    "mongodb": "3.2.2",
    "type-check": "0.3.2"
  }
}
